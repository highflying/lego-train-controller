{
  "name": "lego-controller",
  "version": "1.0.0",
  "description": "Bluetooth LEGO controllet",
  "main": "index.js",
  "scripts": {
    "start": "pm2 startOrRestart ./ecosystem.config.js",
    "clean": "rm -rf ./dist",
    "build": "yotta-build-app",
    "compile": "yotta-compile-app",
    "test": "echo \"Error: no test specified\" && exit 1",
