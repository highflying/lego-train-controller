    "node-poweredup": "^2.5.1",
    "pm2": "^3.5.0"
  },
  "optionalDependencies": {
    "pigpio": "^1.2.2"
  },
  "devDependencies": {
    "@highflying/dev-tools": "^1.2.0",
    "@types/bluebird": "^3.5.26",
    "@types/debug": "4.1.4",
    "@types/micro": "^7.3.3",
    "@types/microrouter": "^3.1.0",
    "@types/noble": "0.0.39",
    "@types/pigpio": "^1.2.1"
