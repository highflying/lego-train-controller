{
  "files": ["./src/global.d.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}
